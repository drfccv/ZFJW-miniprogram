/* 考试安排页面样式 - 简约白色扁平化风格 */

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f1f3f4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.update-time {
  font-size: 22rpx;
  color: #999999;
  font-weight: 400;
  opacity: 0.8;
}

.container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 学期选择器 */
.term-selector {
  background: #ffffff;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f3f4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.selector-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.selector-item:active {
  background: #007AFF;
  color: #ffffff;
}

.selector-label {
  color: #666666;
  margin-right: 10rpx;
}

.selector-value {
  color: #333333;
  font-weight: 500;
  margin-right: 10rpx;
}

.selector-arrow {
  color: #999999;
  font-size: 20rpx;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%; /* 刷新按钮保持圆形 */
  background: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

.refresh-btn:active {
  transform: scale(0.9);
}

.refresh-icon {
  color: #ffffff;
  font-size: 28rpx;
}

/* 考试列表 */
.exam-list {
  margin: 24rpx;
}

.exam-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  position: relative;
}

.exam-item:active {
  transform: scale(0.98);
  background: #f8f9fa;
}

.exam-time {
  width: 140rpx;
  margin-right: 20rpx;
  text-align: center;
  flex-shrink: 0;
}

.exam-date {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #007AFF;
  margin-bottom: 8rpx;
}

.exam-time-range {
  display: block;
  font-size: 20rpx;
  color: #666;
  background: #e3f2fd;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.exam-info {
  flex: 1;
  margin-right: 20rpx;
}

.course-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.exam-location, .exam-type, .seat-number {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.exam-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.status-badge {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: bold;
}

.status-badge.upcoming {
  background: #e3f2fd;
  color: #1976d2;
}

.status-badge.today {
  background: #fff3e0;
  color: #f57c00;
}

.status-badge.completed {
  background: #e8f5e8;
  color: #388e3c;
}

.status-badge.unknown {
  background: #f5f5f5;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.reload-btn {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 50%;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
