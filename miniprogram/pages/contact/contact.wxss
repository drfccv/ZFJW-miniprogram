/* 联系方式页面样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.contact-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin: 40rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
  display: block;
}

.card-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  display: block;
}

.qrcode-container {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.qrcode-image {
  width: 100%;
  height: 100%;
}

/* 响应式设计 */
@media screen and (max-width: 400px) {
  .contact-card {
    margin: 20rpx;
    padding: 40rpx 20rpx;
  }
  
  .qrcode-container {
    width: 320rpx;
    height: 320rpx;
  }
}