/* 登录页面样式 - 简约白色扁平化风格 */

/* 页面容器 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(to bottom right, #f8f9fa 0%, #e3f2fd 50%, #ffffff 100%);
  display: flex;
  flex-direction: column;
  padding: 48rpx;
  box-sizing: border-box;
}

/* 顶部装饰 */
.header {
  text-align: center;
  margin-bottom: 48rpx;
  margin-top: 48rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(to bottom right, #007AFF, #5AC8FA);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.25);
}

.logo-icon {
  font-size: 48rpx;
  color: #ffffff;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.4;
}

/* 登录表单 */
.login-form {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 48rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f1f3f4;
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
  position: relative;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #ffffff;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #007AFF;
  box-shadow: 0 0 0 3rpx rgba(0, 122, 255, 0.1);
  outline: none;
}

.input::placeholder {
  color: #adb5bd;
}

/* 密码容器样式 */
.password-container {
  position: relative;
  width: 100%;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #adb5bd;
  transition: color 0.3s ease;
  cursor: pointer;
  z-index: 2;
}

.password-toggle:active {
  color: #007AFF;
}

/* 验证码区域 */
.captcha-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.captcha-input {
  flex: 1;
}

.captcha-image {
  width: 160rpx;
  height: 88rpx;
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  background: #f8f9fa;
  object-fit: cover;
  transition: border-color 0.3s ease;
}

.captcha-image:active {
  border-color: #007AFF;
}

.captcha-placeholder {
  width: 160rpx;
  height: 88rpx;
  border: 2rpx dashed #dee2e6;
  border-radius: 12rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #adb5bd;
  text-align: center;
}

/* 复选框样式 */
.checkbox-group {
  margin-bottom: 20rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  cursor: pointer;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #dee2e6;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  transition: all 0.3s ease;
  background: #ffffff;
}

.checkbox.checked {
  background: #007AFF;
  border-color: #007AFF;
}

.checkbox-icon {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: bold;
}

.checkbox-label {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  user-select: none;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(to bottom right, #007AFF, #5AC8FA);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.25);
}

.login-btn.loading {
  opacity: 0.7;
  cursor: not-allowed;
}

.login-btn.disabled {
  background: #e9ecef;
  color: #adb5bd;
  cursor: not-allowed;
}

/* 工具按钮区域 */
.tool-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.tool-btn {
  flex: 1;
  height: 76rpx;
  background: #ffffff;
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tool-btn:active {
  background: #007AFF;
  color: #ffffff;
  border-color: #007AFF;
}

.tool-btn-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* URL格式说明 */
.url-info {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  border-left: 4rpx solid #ff9800;
}

.url-info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.url-info-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
  color: #ff9800;
}

.url-example {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.url-example-good {
  color: #4caf50;
}

.url-example-bad {
  color: #f44336;
}

/* 错误提示 */
.error-message {
  background: #ffebee;
  border: 1rpx solid #ffcdd2;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #f44336;
  display: flex;
  align-items: center;
}

.error-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 成功提示 */
.success-message {
  background: #e8f5e8;
  border: 1rpx solid #c8e6c9;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #4caf50;
  display: flex;
  align-items: center;
}

.success-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 底部链接 */
.footer-links {
  text-align: center;
  margin-top: auto;
  padding-top: 30rpx;
}

.footer-link {
  font-size: 24rpx;
  color: #adb5bd;
  margin: 0 16rpx;
}

.footer-link:active {
  color: #007AFF;
}

/* 安全区域 */
.safe-area {
  height: calc(env(safe-area-inset-bottom) + 20rpx);
}

/* 学校选择器样式 */
.school-picker {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
  display: block; /* 确保picker占据完整的点击区域 */
}

.picker-display {
  width: 100%;
  height: 100%;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  /* 确保display区域完全覆盖picker */
  min-height: 88rpx;
  /* 让点击事件穿透到picker */
  pointer-events: none;
}

.picker-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
  line-height: 88rpx; /* 与容器高度相同，确保垂直居中 */
  display: flex;
  align-items: center;
  height: 84rpx; /* 与外层容器高度匹配 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 32rpx; /* 为箭头留出足够空间，防止文字覆盖箭头 */
  /* 移除指针事件，让点击穿透到picker */
  pointer-events: none;
}

.picker-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #adb5bd;
  transition: all 0.3s ease;
  z-index: 2; /* 确保箭头在文字上方 */
  /* 重新启用指针事件，让箭头也能响应点击 */
  pointer-events: auto;
}

.loading-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #007AFF;
  animation: rotate 1s linear infinite;
  z-index: 2; /* 确保加载图标在文字上方 */
  /* 保持指针事件启用 */
  pointer-events: auto;
}

.school-picker:focus .picker-arrow,
.school-picker:active .picker-arrow {
  transform: translateY(-50%) rotate(180deg);
  color: #007AFF;
}

/* 选择器的焦点状态 */
.school-picker:focus {
  border-color: #007AFF;
  box-shadow: 0 0 0 3rpx rgba(0, 122, 255, 0.1);
}

@keyframes rotate {
  from { transform: translateY(-50%) rotate(0deg); }
  to { transform: translateY(-50%) rotate(360deg); }
}

/* 禁用状态的选择器 */
.school-picker[disabled] {
  background-color: #f8f9fa;
  border-color: #e9ecef;
}

.school-picker[disabled] .picker-text {
  color: #6c757d;
}

.school-picker[disabled] .picker-arrow,
.school-picker[disabled] .loading-icon {
  color: #6c757d;
}

/* 响应式适配 */
@media (max-height: 800px) {
  .header {
    margin-bottom: 24rpx;
    margin-top: 24rpx;
  }
  .login-form {
    padding: 30rpx;
  }
}

/* 重要说明区域 */
.notice-section {
  background: #e3f2fd;
  border: 2rpx solid #64b5f6;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1565c0;
  margin-bottom: 15rpx;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #1976d2;
  line-height: 1.4;
}
