/* 课表设置页面样式 - 统一简约风格 */

/* 页面容器 */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding: 0;
}

/* 设置区块 */
.setting-section {
  background: #ffffff;
  margin: 16rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  padding: 24rpx 24rpx 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  border-bottom: 1rpx solid #f1f3f4;
  background: #fafbfc;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f1f3f4;
  transition: background-color 0.2s ease;
  min-height: 88rpx;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #f8f9fa;
}

.setting-label {
  font-size: 28rpx;
  color: #343a40;
  font-weight: 500;
}

.setting-value {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.arrow {
  margin-left: 12rpx;
  color: #adb5bd;
  font-size: 20rpx;
  transform: rotate(90deg);
}

/* 按钮区域 */
.button-section {
  padding: 32rpx 24rpx;
  background: #f8f9fa;
}

.refresh-button, .save-button {
  width: 100%;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.refresh-button {
  background: linear-gradient(to bottom right, #17a2b8, #20c997);
  color: #ffffff;
}

.refresh-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(23, 162, 184, 0.3);
}

.refresh-button[loading] {
  opacity: 0.7;
}

.save-button {
  background: linear-gradient(to bottom right, #007bff, #0056b3);
  color: #ffffff;
}

.save-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 123, 255, 0.3);
}

/* 说明信息 */
.info-section {
  background: #ffffff;
  margin: 20rpx 0;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.info-text:last-child {
  margin-bottom: 0;
}
