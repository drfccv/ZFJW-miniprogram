<view class="container">
  <view class="profile-detail-card">
    <view class="avatar-section">
      <view class="avatar-circle">
        <text class="avatar-text">{{userInfo.name ? userInfo.name.charAt(0) : '学'}}</text>
      </view>
      <view class="name-section">
        <text class="name">{{userInfo.name || '未获取到姓名'}}</text>
        <text class="sid">学号：{{userInfo.sid || '未获取到学号'}}</text>
      </view>
    </view>
    <view class="info-list">
      <view class="info-item"><text class="label">班级：</text><text class="value">{{userInfo.class_name}}</text></view>
      <view class="info-item"><text class="label">专业：</text><text class="value">{{userInfo.major_name}}</text></view>
      <view class="info-item"><text class="label">学院：</text><text class="value">{{userInfo.college_name}}</text></view>
      <view class="info-item"><text class="label">出生日期：</text><text class="value">{{userInfo.birthday}}</text></view>
      <view class="info-item"><text class="label">民族：</text><text class="value">{{userInfo.nationality}}</text></view>
      <view class="info-item"><text class="label">政治面貌：</text><text class="value">{{userInfo.politics_status}}</text></view>
      <view class="info-item"><text class="label">身份证号：</text><text class="value">{{userInfo.id_number}}</text></view>
      <view class="info-item"><text class="label">考生号：</text><text class="value">{{userInfo.candidate_number}}</text></view>
      <view class="info-item"><text class="label">入学日期：</text><text class="value">{{userInfo.enrollment_date}}</text></view>
      <view class="info-item"><text class="label">状态：</text><text class="value">{{userInfo.status}}</text></view>
      <view class="info-item"><text class="label">生源地：</text><text class="value">{{userInfo.domicile}}</text></view>
      <view class="info-item"><text class="label">邮箱：</text><text class="value">{{userInfo.email}}</text></view>
      <view class="info-item"><text class="label">手机号：</text><text class="value">{{userInfo.phone_number}}</text></view>
      <view class="info-item"><text class="label">家长电话：</text><text class="value">{{userInfo.parents_number}}</text></view>
      <view class="info-item"><text class="label">邮编：</text><text class="value">{{userInfo.postal_code}}</text></view>
      <view class="info-item"><text class="label">毕业学校：</text><text class="value">{{userInfo.graduation_school}}</text></view>
      <view class="info-item"><text class="label">学历：</text><text class="value">{{userInfo.education}}</text></view>
    </view>
  </view>
</view> 